<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNoticeTime"
        android:background="#DEDEDE"
       android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:padding="@dimen/dp_5"
        android:text="下午:5:40"
        android:layout_height="@dimen/dp_30">

    </TextView>

    <LinearLayout
        android:background="@drawable/bg_circular"
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivFromHeadPic"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30">

            </ImageView>
            <TextView
                android:id="@+id/tvFromNickName"
                android:layout_marginLeft="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:gravity="center"
                android:text="哈哈哈"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30">

            </TextView>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvRemark"
                android:text="哈哈哈哈"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/tvStatus"
                android:text="呵呵呵"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_status"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvAgree"
                android:background="@drawable/text_circular_left"
                android:gravity="center"
                android:text="同意"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40">

            </TextView>
            <TextView
                android:id="@+id/tvRefuse"
                android:background="@drawable/text_circular_right"
                android:gravity="center"
                android:text="拒绝"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40">

            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>