<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreateGroupActivity">

    <ImageView
        android:id="@+id/ivBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:src="@mipmap/common_icon_back_n_xhdpi"
        android:padding="@dimen/dp_5"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        tools:ignore="MissingConstraints">

    </ImageView>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/sp_18"
        android:text="创建群聊"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>

    <View
        android:id="@+id/vv"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="#999999"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        tools:ignore="MissingConstraints">

    </View>

    <ImageView
        android:id="@+id/groupPic"
        android:src="@mipmap/group_pic"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vv"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        tools:ignore="MissingConstraints">

    </ImageView>

    <EditText
        android:id="@+id/editGroupName"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:paddingLeft="@dimen/dp_15"
        android:hint="填写群名称(2-20汉字)"
        android:background="@drawable/edit_stroke"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/groupPic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/dp_184"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">

    </EditText>

    <LinearLayout
        android:id="@+id/ll"
        android:padding="@dimen/dp_5"
        android:orientation="horizontal"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/editGroupName"
        android:layout_width="@dimen/dp_336"
        android:layout_height="@dimen/dp_119"
        tools:ignore="MissingConstraints">
        <EditText
            android:id="@+id/editGroupContent"
            android:hint="介绍一下您的群吧，让更多朋友加入"
            android:background="@drawable/edit_back"
            android:layout_width="@dimen/dp_336"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/butonCreate"
        android:layout_marginTop="@dimen/dp_40"
        android:text="创建"
        android:textSize="@dimen/sp_18"
        android:textColor="#ffffff"
        android:background="@drawable/iv_fillet"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>