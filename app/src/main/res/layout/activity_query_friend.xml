<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QueryFriendActivity">

    <ImageView
        android:id="@+id/ivbg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/qureypic"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </ImageView>
    <TextView
        android:id="@+id/tvEdit"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="编辑"
        android:textSize="@dimen/sp_16"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/ivbg"
        app:layout_constraintBottom_toBottomOf="@id/ivbg"
        app:layout_constraintTop_toBottomOf="@id/ivbg"
        android:id="@+id/ivHeadPic"
        android:layout_width="@dimen/dp_77"
        android:layout_height="@dimen/dp_77"
        tools:ignore="MissingConstraints">

    </ImageView>

    <TextView
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivHeadPic"
        android:id="@+id/tvSignature"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:gravity="center_horizontal"
        android:text="哈哈哈哈"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:id="@+id/tt"
        android:layout_marginTop="@dimen/dp_64"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSignature"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:gravity="center_horizontal"
        android:text="- - - - - - 个人资料 - - - - - -"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>
    <TextView
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tt"
        android:id="@+id/tvSexTime"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:gravity="center_horizontal"
        android:text="女 (2020-01-01)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSexTime"
        android:id="@+id/tvphone"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:gravity="center_horizontal"
        android:text="111111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvphone"
        android:id="@+id/tvEmail"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:gravity="center_horizontal"
        android:text="aaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>

    <Button
        android:id="@+id/btnSend"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:textColor="#ffffff"
        android:text="发消息"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/iv_fillet"
        android:layout_width="@dimen/dp_336"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>