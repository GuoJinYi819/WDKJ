<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SetupActivity"
    android:orientation="vertical"
    android:background="#C8D1D1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/imgSetupBackWy"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/common_nav_btn_back_n_xhdpi"
            >
        </ImageView>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="设置"
            android:textColor="#878888"
            >
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#5B5C5C"
        >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"
                android:textSize="16sp"
                >
            </TextView>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgSetUpHeadWy"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                fresco:roundAsCircle="true"
                fresco:placeholderImage="@mipmap/ic_launcher"
                >
            </com.facebook.drawee.view.SimpleDraweeView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="昵称"
                android:textSize="16sp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvSetUpNameWy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性别"
                android:textSize="16sp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvSetUpSexWy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="签名"
                android:textSize="16sp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvSetUpSignatureWy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:background="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="生日"
                android:textSize="16sp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvSetUpBirthdayWy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电话"
                android:textSize="16sp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvSetUpPhotoWy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="邮箱"
                android:textSize="16sp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvSetUpEmailWy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:background="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="积分"
                android:textSize="16sp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvSetUpintegralWy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VIP"
                android:textSize="16sp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvSetUpWhetherVipWy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="绑定人脸"
                android:textSize="16sp"
                >
            </TextView>

            <TextView
                android:text="立即绑定"
                android:id="@+id/tvSetUpWhetherFaceIdWy"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:textColor="#FB3223"></TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            >
        </View>
        <TextView
            android:id="@+id/tvOutLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#F44336"
            android:text="退出登录"
            >
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#787A7A"
            android:layout_marginBottom="@dimen/dp_10"
            >
        </View>
    </LinearLayout>
</LinearLayout>