<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectGroupActivity">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:id="@+id/ivBlac"
        android:src="@mipmap/common_icon_back_n_xhdpi"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        tools:ignore="MissingConstraints">

    </ImageView>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="#000"
        android:textSize="@dimen/sp_18"
        android:text="选择分组"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>

    <View
        android:id="@+id/vv"
        android:background="#EEE9E9"
        app:layout_constraintTop_toBottomOf="@id/ivBlac"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        tools:ignore="MissingConstraints">

    </View>

    <TextView
        android:paddingLeft="@dimen/dp_12"
        android:text="添加新分组"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:id="@+id/tvAdd"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/vv"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        tools:ignore="MissingConstraints">

    </TextView>

    <ListView
        android:id="@+id/listView"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvAdd"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>