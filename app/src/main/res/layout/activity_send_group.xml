<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SendGroupActivity">
    <ImageView
        android:id="@+id/ivBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:src="@mipmap/common_nav_btn_back_n_xhdpi"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvName"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="群名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>

    <ImageView
        android:id="@+id/ivSetting"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@mipmap/btn_setting_n_xhdpi"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        tools:ignore="MissingConstraints">

    </ImageView>
    <View
        android:id="@+id/vv"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:layout_marginTop="@dimen/dp_18"
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        tools:ignore="MissingConstraints">

    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerGroup"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ll"
        app:layout_constraintTop_toTopOf="@id/vv"

        tools:ignore="MissingConstraints">

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/ll"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:padding="@dimen/dp_5"
        tools:ignore="MissingConstraints">
        <EditText
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:id="@+id/editContent"
            android:background="@drawable/bg_fillet_seach"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35">

        </EditText>
        <TextView
            android:id="@+id/tvSend"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:text="发送"
            android:gravity="center"
            android:layout_height="match_parent">

        </TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>