<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChatSettingActivity">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:id="@+id/ivBlac"
        android:src="@mipmap/common_icon_back_n_xhdpi"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        tools:ignore="MissingConstraints">

    </ImageView>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="#000"
        android:textSize="@dimen/sp_18"
        android:text="聊天设置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>

    <LinearLayout
        android:id="@+id/ll"
        android:paddingLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_25"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/ivBlac"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ivFriendPic"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36">

        </ImageView>
        <TextView
            android:id="@+id/tvName"
            android:layout_marginTop="@dimen/dp_10"
            android:text="嘿嘿嘿"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/tvName2"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintTop_toBottomOf="@id/ll"
        android:background="#fff"
        android:text="嘿嘿额"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:paddingLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">

    </TextView>

    <RelativeLayout
        android:id="@+id/relativeFz"
        android:layout_marginTop="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/tvName2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:background="#fff"
            android:text="分组"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:paddingLeft="@dimen/dp_12"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            tools:ignore="MissingConstraints">

        </TextView>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:src="@mipmap/common_icon_back_fz"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            tools:ignore="MissingConstraints">

        </ImageView>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_1"
        android:id="@+id/tvQurey"
        app:layout_constraintTop_toBottomOf="@id/relativeFz"
        android:background="#fff"
        android:text="查询聊天记录"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:paddingLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:layout_marginTop="@dimen/dp_1"
        android:id="@+id/tvClose"
        app:layout_constraintTop_toBottomOf="@id/tvQurey"
        android:background="#fff"
        android:text="删除聊天记录"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:paddingLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">

    </TextView>

    <Button
        android:id="@+id/btnDelete"
        android:textSize="@dimen/sp_14"
        android:text="删除好友"
        android:background="@drawable/buttom_fillet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_40"
        android:textColor="#ffffff"
        android:layout_width="@dimen/dp_336"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>