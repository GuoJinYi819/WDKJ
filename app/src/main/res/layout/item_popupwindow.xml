<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#777777"
    android:paddingLeft="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:paddingRight="@dimen/dp_12"
    android:paddingTop="@dimen/dp_6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/nav_icon_add_friend_n_xhdpi"
        android:id="@+id/ivFriendPic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        tools:ignore="MissingConstraints">

    </ImageView>

    <TextView
        android:id="@+id/tvFriend"
        android:text="加好友或群"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        app:layout_constraintLeft_toRightOf="@+id/ivFriendPic"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </TextView>
    <ImageView
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/nav_icon_add_group_n_xhdpi"
        android:id="@+id/ivGroupPic"
        app:layout_constraintTop_toBottomOf="@id/ivFriendPic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        tools:ignore="MissingConstraints">

    </ImageView>

    <TextView
        android:id="@+id/tvGroup"
        android:text="创建群聊"
        android:textSize="@dimen/sp_14"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        app:layout_constraintLeft_toRightOf="@+id/ivGroupPic"
        app:layout_constraintTop_toBottomOf="@id/tvFriend"
        tools:ignore="MissingConstraints">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>