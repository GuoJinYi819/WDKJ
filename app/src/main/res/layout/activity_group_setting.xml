<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GroupSettingActivity">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/group_bg"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        tools:ignore="MissingConstraints">

    </ImageView>
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:src="@mipmap/common_icon_back_n_xhdpi"
        android:id="@+id/ivPic"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        tools:ignore="MissingConstraints">

    </ImageView>
    <ImageView
        android:id="@+id/ivGroupPic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_210"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@color/colorAccent"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        tools:ignore="MissingConstraints">

    </ImageView>

    <RelativeLayout
        android:id="@+id/relativeMember"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@id/ivGroupPic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        tools:ignore="MissingConstraints">
        <TextView
            android:text="群成员"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            tools:ignore="MissingConstraints">
        </TextView>

        <TextView
            android:layout_toLeftOf="@id/ivvvv"
           android:layout_marginRight="@dimen/dp_12"
            android:text="共几人"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf=""
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_39"
            tools:ignore="MissingConstraints">

        </TextView>

        <ImageView
            android:id="@+id/ivvvv"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/common_icon_back_fz"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            tools:ignore="MissingConstraints">

        </ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvParty"
        app:layout_constraintTop_toBottomOf="@id/relativeMember"
        android:text="聚会群"
        android:textSize="@dimen/sp_14"
        android:paddingLeft="@dimen/dp_12"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_7"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        tools:ignore="MissingConstraints">

    </TextView>

    <RelativeLayout
        android:id="@+id/relativeIntroduce"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintTop_toBottomOf="@id/tvParty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        tools:ignore="MissingConstraints">
        <TextView
            android:text="群简介"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            tools:ignore="MissingConstraints">
        </TextView>


        <ImageView
            android:id="@+id/ivvv"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/common_icon_back_fz"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            tools:ignore="MissingConstraints">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeNotice"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintTop_toBottomOf="@id/relativeIntroduce"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        tools:ignore="MissingConstraints">
        <TextView
            android:text="群通知"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            tools:ignore="MissingConstraints">
        </TextView>


        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/common_icon_back_fz"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            tools:ignore="MissingConstraints">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeAdministration"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintTop_toBottomOf="@id/relativeNotice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        tools:ignore="MissingConstraints">
        <TextView
            android:text="群管理"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            tools:ignore="MissingConstraints">
        </TextView>


        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/common_icon_back_fz"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            tools:ignore="MissingConstraints">

        </ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvQuery"
        app:layout_constraintTop_toBottomOf="@id/relativeAdministration"
        android:text="查询聊天记录"
        android:textSize="@dimen/sp_14"
        android:paddingLeft="@dimen/dp_12"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_7"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        tools:ignore="MissingConstraints">

    </TextView>

    <Button
        android:id="@+id/btnClone"
        android:textSize="@dimen/sp_15"
        android:textColor="#ffffff"
        android:text="解散群聊"
        android:background="@drawable/buttom_fillet_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_20"
        tools:ignore="MissingConstraints">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>