<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9" />

        <com.google.android.material.tabs.TabLayout
            android:paddingTop="@dimen/dp_8"
            android:background="#ffffff"
            android:id="@+id/tab"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabTextColor="#D4D4D4"
            app:tabSelectedTextColor="#000"
            app:tabIndicatorColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            />


    </LinearLayout>
    <!--左面抽屉-->
    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:background="#D0D5D5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:background="@mipmap/mytopbackgroud"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgMyTopWy"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                fresco:roundAsCircle="true"
                fresco:placeholderImage="@mipmap/ic_launcher"
                >
            </com.facebook.drawee.view.SimpleDraweeView>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/tvMyNameWy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:text="用户名称"
                    >
                </TextView>
                <TextView
                    android:id="@+id/tvMySignatureWy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:text="用户签名"
                    >
                </TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_60"
                android:padding="@dimen/dp_10"
                android:layout_weight="1"
                android:src="@mipmap/myvip"
                >
            </ImageView>
            <LinearLayout
                android:id="@+id/linearSignWy"
                android:layout_width="@dimen/dp_0"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/my_icon_sign_n_xhdpi"
                    >
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:text="签名">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearCollectionWy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_collect_n_xhdpi"
                >
            </ImageView>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="我的收藏"
                android:gravity="center_vertical"
                >
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_next"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearFollowWy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_attention_n_xhdpi"
                >
            </ImageView>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="我的关注"
                android:gravity="center_vertical"
                >
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_next"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearPostWy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_card_n_xhdpi"
                >
            </ImageView>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="我的帖子"
                android:gravity="center_vertical"
                >
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_next"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearNoticeWy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_notice_n_xhdpi"
                >
            </ImageView>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="我的通知"
                android:gravity="center_vertical"
                >
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_next"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearScoreWy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_score_n_xhdpi"
                >
            </ImageView>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="我的积分"
                android:gravity="center_vertical"
                >
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_next"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearTaskWy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_task_n_xhdpi"
                >
            </ImageView>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="我的任务"
                android:gravity="center_vertical"
                >
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_next"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_setting_n_xhdpi"
                >
            </ImageView>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="设置"
                android:gravity="center_vertical"
                >
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/my_icon_next"
                >
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="八维学生制作">
        </TextView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>