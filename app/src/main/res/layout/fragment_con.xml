<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBbb"
        android:id="@+id/rg">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_25"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@mipmap/lblb"
            android:layout_marginLeft="@dimen/dp_10"
            android:button="@null"
            android:layout_marginRight="@dimen/dp_90"
            android:id="@+id/bu1"/>
        <RadioButton
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:text="咨讯"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_20"
            android:button="@null"
            android:id="@+id/bu2"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_25"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@mipmap/ssss"
            android:button="@null"
            android:id="@+id/bu3"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorBb"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp"></androidx.viewpager.widget.ViewPager>
</LinearLayout>