<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/logbg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_35">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/phon"/>
        <EditText
            android:imeOptions="actionNext"
            android:maxLength="11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_35"
            android:id="@+id/ephone"
            android:textColor="#fff"
            android:hint="手机号"
            android:theme="@style/MyEditText"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_35">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/suo"/>
        <EditText
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:password="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_35"
            android:id="@+id/epwd"
            android:textColor="#fff"
            android:hint="密码"
            android:theme="@style/MyEditText"
            />
    </LinearLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_marginRight="@dimen/dp_30"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/kszc"
           android:text="快速注册"
           android:textColor="#fff"
           />
   </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_35"
        android:background="@color/colorBlue"
        android:textColor="#fff"
        android:text="登录"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_35"
        android:id="@+id/dl"></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_35"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="第三方账号快速登录"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_15"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_35"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">
        <ImageView
            android:id="@+id/ivWxLogin"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:src="@mipmap/common_icon_weixin_n_xxhdpi"/>
        <ImageView
            android:layout_width="0dp"
            android:padding="@dimen/dp_8"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:src="@mipmap/login_icon_artificial_intelligence_n_xxhdpi"/>
    </LinearLayout>
</LinearLayout>